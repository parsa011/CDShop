@model IEnumerable<Shop.Domain.Entities.Address>

@{
    ViewData["Title"] = "ادرس ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-9">

    <h1>ادرس ها</h1>

    <p>
        <a asp-action="AddAddress">افزودن</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    عنوان
                </th>
                <th>
                    ادرس کامل
                </th>
                <th>
                    شهر
                </th>
                <th>
                    شماره تماس
                </th>
                <th>
                    ادرس پستی
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostAddress)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "EditAddress", new { id = item.Id }) |
                        <a href="/Profile/DeleteAddress/@item.Id" onclick="return confirm('ایا از حذف مطمئن هستید؟')">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Sidebar{
    <h1 class="my-4">صفحه کاربری</h1>
    @(await Component.InvokeAsync("CategoriesComponent"))

    <div class="list-group">
        <a href="/Profile/Addresses" class="list-group-item active">ادرس ها</a>
        <a href="/Profile/MyOrders" class="list-group-item">سفارشات من</a>
    </div>
}