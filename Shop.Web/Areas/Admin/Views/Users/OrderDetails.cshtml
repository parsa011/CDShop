@model IEnumerable<Shop.Common.ViewModels.CartViewModel.ShowOrderViewModel>
@using Shop.Common.Extention
@{
    ViewData["Title"] = "سفارشات کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int row = 1;
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1> @ViewBag.UserName جزئیات سفارش کاربر</h1>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>تصویر</th>
                        <th>عنوان</th>
                        <th>تعداد</th>
                        <th>قیمت</th>
                        <th>جمع</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@row</td>
                            <td>
                                <img style="max-width: 150px" class="thumbnail" src="@item.ImageName" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Count</td>
                            <td>@item.Price.ToString("n0")</td>
                            <td>@item.Sum.ToString("n0")</td>
                        </tr>
                        row += 1;
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>