@model IEnumerable<Shop.Common.UserViewModel.UsersListViewModel>
@{
    ViewData["Title"] = "کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                کاربران
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr>
                    <th><i class="icon-bullhorn"></i>نام</th>
                    <th class="hidden-phone"><i class="icon-question-sign"></i>شماره </th>
                    <th><i class="icon-dollar"></i>کد فعالسازی</th>
                    <th><i class=" icon-question"></i>سطح دسترسی</th>
                    <th><i class=" icon-bookmark"></i>وضعیت</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    @foreach (var item in Model)
                    {
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.ActivationCode</td>
                        <td>@item.Role</td>
                        <td>@((item.IsActive == true) ? "فعال" : "غیر فعال")</td>

                        <td>
                            <a href="/Admin/Users/Edit/@item.Id" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                            <a href="/Admin/Users/UserOrders/@item.Id" class="btn btn-info btn-xs">سفارشات کاربر</a>
                            <a href="/Admin/Users/Delete/@item.Id" onclick="return confirm('ایا از حذف مطمئن هستید؟')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                        </td>
                    }
                </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>