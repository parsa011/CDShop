@model List<Shop.Domain.Entities.Comment>
@using Shop.Common.Extention
@{
    ViewData["Title"] = "نظرات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
             
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i class="icon-bullhorn"></i>نام</th>
                            <th class="hidden-phone"><i class="icon-question-sign"></i>ایمیل</th>
                            <th><i class="icon-dollar"></i>نظر</th>
                            <th><i class=" icon-question"></i>تاریخ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Content</td>
                                <td>@item.CreatedTime.ToPersianDateString()</td>

                                <td>
                                    <a href="/Admin/Comments/Delete/@item.Id" onclick="return confirm('ایا از حذف مطمئن هستید؟')" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>
    </div>