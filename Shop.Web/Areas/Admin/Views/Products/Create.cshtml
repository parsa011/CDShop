@model Shop.Common.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "افزودن محصول";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel" style="padding:10px">
            <h1>افزودن محصول</h1>


            <form asp-action="Create" method="post" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        <label class="control-label">عنوان</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">توضیح کوتاه</label>
                        <input asp-for="Summary" class="form-control" />
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        <label class="control-label">قیمت</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">تعدا دیسک</label>
                        <input asp-for="DiskCount" class="form-control" />
                        <span asp-validation-for="DiskCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <label class="control-label">محتوا</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="HasBox" /> دارای  جعبه
                        </label>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">تعداد موجود</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="HasHelp" /> دارای راهنما یا اموزش
                        </label>
                    </div>
                    <div class="form-group col-lg-6">
                        <select class="form-control" asp-for="Content" placeholder="دسته  :">
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group col-lg-6">
                    <input type="submit" value="افزودن" class="btn btn-primary" />
                </div>
            </form>


            <div>
                <a href="/Admin/Products/Index">برگشت به لیست</a>
            </div>
        </section>
    </div>
</div>
