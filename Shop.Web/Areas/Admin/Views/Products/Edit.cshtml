@model Shop.Common.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel" style="padding:10px">
            <h1>ویرایش محصول</h1>

            <div class="panel-body">
                <form action="/Admin/Products/Edit" method="post" role="form" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label for="title" class="control-label">عنوان</label>
                            <input id="title" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">توضیح کوتاه</label>
                            <input asp-for="Summary" class="form-control" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label class="control-label">قیمت</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="control-label">تعدا دیسک</label>
                            <input asp-for="DiskCount" class="form-control" max="20" />
                            <span asp-validation-for="DiskCount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="control-label">محتوا</label>
                            <textarea asp-for="Content" class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label class="control-label">دسته بندی</label>
                            <select class="form-control" asp-for="CategoryId" placeholder="دسته  :">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>

                        <div class="form-group col-lg-6">
                            <label class="control-label">تعداد موجود</label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6 form-check">
                            <label class="form-check-label">
                                دارای راهنما یا اموزش
                                <input class="form-check-input" asp-for="HasHelp" />
                            </label>
                        </div>
                        <div class="form-group col-lg-6 form-check">
                            <label class="form-check-label">
                                دارای جعبه
                                <input class="form-check-input" asp-for="HasBox" />
                            </label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="control-label">انتخاب عکس</label>
                            <input type="file" asp-for="Images" class="form-control-file" multiple />
                        </div>
                        <div class="form-group col-lg-6">
                            <input type="submit" value="ویرایش" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>

            <div>
                <a href="/Admin/Products/Index">برگشت به لیست</a>
            </div>
        </section>
    </div>
</div>
@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Content');
    </script>
}