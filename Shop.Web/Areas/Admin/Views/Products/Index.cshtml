@model List<Shop.Common.ViewModels.ProductListViewModel>
@{
    ViewData["Title"] = "محصولات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <a href="/Admin/Products/Create" class="btn btn-primary" style="margin:10px">افزودن</a>
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i class="icon-bullhorn"></i>عنوان</th>
                            <th class="hidden-phone"><i class="icon-question-sign"></i>خلاصه</th>
                            <th><i class="icon-dollar"></i>قیمت</th>
                            <th><i class=" icon-question"></i>تعداد</th>
                            <th><i class=" icon-bookmark"></i>دسته بندی</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var item in Model)
                            {
                                <td>@item.Title</td>
                                <td>@item.Summary</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@item.Category.Title</td>

                                <td>

                                    <a href="/Admin/Categories/Edit/@item.Id" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                    <a href="/Admin/Products/Delete/@item.Id" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>